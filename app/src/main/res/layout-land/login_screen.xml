<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <Button
        android:id="@+id/btusuario"
        android:layout_width="158dp"
        android:layout_height="59dp"
        android:text="USUARIO"
        android:textSize="@dimen/text_size"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.527"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.222"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btinvitado"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:text="INVITADO"
        android:textSize="@dimen/text_size"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        android:layout_marginBottom="-38dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btusuario" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Continuar como "
        android:textSize="@dimen/text_size"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintTop_toTopOf="@+id/imageButton"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.09" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="188dp"
        android:layout_height="217dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@android:color/background_light"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/logo1"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />
</android.support.constraint.ConstraintLayout>